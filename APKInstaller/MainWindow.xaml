<Window x:Class="APKInstaller.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:APKInstaller"
        mc:Ignorable="d"
        Name="Window"
        Title="APK Installer" Height="350" Width="525">
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="関連付け">
                <MenuItem Header="APK をダブルクリックでインストール可能にする" Click="Associate" />
                <MenuItem Header="APK の関連付けを解除" Click="Dissociate" />
            </MenuItem>
        </Menu>
        <TextBox Name="Redirect"
                 BorderThickness="0"
                 IsReadOnly="True"
                 VerticalScrollBarVisibility="Auto"
                 TextWrapping="Wrap" />
    </DockPanel>
</Window>